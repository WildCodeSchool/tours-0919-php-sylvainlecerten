    <table class="presentation-show__table">
        <tbody>
            <tr>
                <th class="presentation-show__table-case">Id</th>
                <td class="presentation-show__table-case">{{ presentation.id }}</td>
            </tr>
            <tr>
                <th class="presentation-show__table-case">Title</th>
