{% extends 'base.html.twig' %}

{% block title %}Content{% endblock %}

{% block body %}
    <h1 class="content-index_title">Contenus</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ content.id }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ content.type }}</td>
            </tr>
            <tr>
                <th>Value</th>
                <td>{{ content.value }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ content.category }}</td>
            </tr>
            <tr>
                <th>Ordering</th>
                <td>{{ content.ordering }}</td>
            </tr>
        </tbody>
    </table>
    <div class="message-link_container">
        <a class="message-index_link" href="{{ path('content_index') }}">Retour</a>
        <a class="message-index_link" href="{{ path('content_edit', {'id': content.id}) }}">Editer</a>
        <div class="message-index_link">{{ include('content/_delete_form.html.twig') }}</div>
    </div>
{% endblock %}
