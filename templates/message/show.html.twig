{% extends 'base.html.twig' %}

{% block title %}Message{% endblock %}

{% block body %}
    <h1 class="content-index_title">Message</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ message.id }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ message.Prenom }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ message.Nom }}</td>
            </tr>
            <tr>
                <th>Societe</th>
                <td>{{ message.Societe }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ message.Message }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ message.Telephone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ message.Email }}</td>
            </tr>
        </tbody>
    </table>
    <div class="message-link_container">
        <a class="message-index_link" href="{{ path('message_index') }}">Retour</a>
        <a class="message-index_link" href="{{ path('message_edit', {'id': message.id}) }}">Editer</a>
    </div>
    {{ include('message/_delete_form.html.twig') }}
{% endblock %}
