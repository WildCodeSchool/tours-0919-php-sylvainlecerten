{% extends 'base.html.twig' %}

{% block title %}
    <h1 class="title_top">Who AmI ?</h1>
{% endblock %}

{% block body %}
    <section class="presentation_intro">
        <h1 class="Who_am_i">WHO AM I ?</h1>
        <h2 class="Who_am_i">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nam ut euismod lorem. Proin congue mattis.</h2>
    </section>
    <section class="presentation_detail">
        <div class="img_presentation">
            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRFbGbRhmxEkHjKcbbGs8DItEpqEGuSTBRiGnC76RvKrdO03iiZlA&s" class="presentation_img" alt="illustration">
        </div>
        <div class="presentation_column">
            {% for presentation in presentations %}
                <div class="presentation_part">
                    <h2 class="presentation_title">{{ presentation.title }}</h2>
                    <h3 class="presentation_subtitle">{{ presentation.subtitle }}</h2>
                    <p class="presentation_paragraph">{{ presentation.paragraph}}</p>
                </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}