{% extends 'base.html.twig' %}

{% block title %}Service{% endblock %}

{% block body %}
    <h1 class="content-index_title">Service</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ service.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ service.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ service.description }}</td>
            </tr>
            <tr>
                <th>Ordering</th>
                <td>{{ service.ordering }}</td>
            </tr>
        </tbody>
    </table>

    <div class="message-link_container">
        <a class="message-index_link" href="{{ path('service_index') }}">Retour</a>
        <a class="message-index_link" href="{{ path('service_edit', {'id': service.id}) }}">Editer</a>
        {{ include('service/_delete_form.html.twig') }}
    </div>
{% endblock %}
