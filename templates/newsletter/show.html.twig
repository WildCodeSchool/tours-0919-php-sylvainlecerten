{% extends 'base.html.twig' %}

{% block title %}Abonnés à la newsletter{% endblock %}

{% block body %}
    <h1 class="content-index_title">Abonnés à la newsletter</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ newsletter.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ newsletter.email }}</td>
            </tr>
        </tbody>
    </table>

    <div class="message-link_container">
        <a class="message-index_link" href="{{ path('newsletter_index') }}">Retour</a>
        <a class="message-index_link" href="{{ path('newsletter_edit', {'id': newsletter.id}) }}">Editer</a>
        {{ include('newsletter/_delete_form.html.twig') }}
    </div>
{% endblock %}
