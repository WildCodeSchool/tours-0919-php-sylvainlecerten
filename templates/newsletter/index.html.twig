{% extends 'base.html.twig' %}

{% block title %}Newsletter index{% endblock %}

{% block body %}
    <h1 class="content-index_title">Abonnés à la newsletter</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for newsletter in newsletters %}
            <tr>
                <td>{{ newsletter.id }}</td>
                <td>{{ newsletter.email }}</td>
                <td>
                    <a class="admin-table_link" href="{{ path('newsletter_show', {'id': newsletter.id}) }}">Voir</a>
                    <a class="admin-table_link" href="{{ path('newsletter_edit', {'id': newsletter.id}) }}">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="message-link_container">
        <a class="message-index_link" href="{{ path('content_index') }}">Retour</a>
        <a class="message-index_link" href="{{ path('newsletter_new') }}">Ajouter un e-mail</a>
    </div>
{% endblock %}
